.b-header
  opacity 0
  
  .s2
    text-align right
  
  .i-page-loaded &
    transition( opacity 1s ease )
    opacity 1

  .b-placeholder
    background-color transparent
    width auto
    max-width 100%
    height auto
  
    img,
    a,
    span
      display inline-block
      
  .b-logo
  
    img
      @media( max-width 600px )
        width 100px
        height auto
    
    span
      font-size .55rem
      color #666666
      display inline-block
      vertical-align top
      margin-left 20px
      
      @media( max-width 600px )
        margin-left 15px
      
  .b-top-menu
    transform( translateY( 50px ))
    
    .i-page-loaded &
      transition( transform 1s ease )
      transform( translateY(0))
  
    &__item
      font-size .8rem
      margin-left 40px
      
      &:first-of-type
        margin-left 0
    
      .b-placeholder
        width auto
        height auto
        margin-left 0
        
    &-icon
      display inline-block
      width 34px
      height 34px
      background-repeat no-repeat
      background-position center
      background-size contain
      
#slide-out
  display block
  padding-top 5rem
  background-color #fff
  box-shadow none
  
  .b-button
    margin 2.5rem 20%
    width 60%
    padding 0
    transition( opacity 1s ease 1s )
    opacity 0
    
  &.i-open
    .b-button
      opacity 1
    
.sidenav-overlay
  background-color rgba( 255, 255, 255, .5 )
  
.b-sidenav__item

  a&,
  span&
    display block
    font-size 1.3rem
    font-weight bold
    padding 0 20%
    white-space nowrap
    line-height 5rem
    
    transition( all 1s ease )
    transform( translateY( 30px ))
    opacity 0
    
    #slide-out.i-open &
      transform( translateY(0))
      opacity 1
      
      &:nth-of-type(1)
        transition-delay 0
      
      &:nth-of-type(2)
        transition-delay .15s
      
      &:nth-of-type(3)
        transition-delay .25s
      
      &:nth-of-type(4)
        transition-delay .3s

.b-footer
  opacity 0
  font-size .55rem
  
  .row
    margin-bottom 0
    
  .col.m4
    display flex
    
    .b-instagram-icon
      margin-right 30px
    
    .b-placeholder
      width 100%
  
  @media ( max-width 600px )
    font-size .7rem
  
  .i-page-loaded &
    transition( opacity 1s ease )
    opacity 1
  
  .b-placeholder
    background-color transparent
    height auto
  
    img,
    a,
    span
      display inline-block
      
.b-instagram-icon
  display inline-block
  width 24px
  height 24px
  background-repeat no-repeat
  background-position center
  background-size contain 