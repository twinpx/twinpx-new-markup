body
  background #fff
  color #666666
  
.b-page-content
  position relative
  
.b-ph-gallery
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  
hr
  display block
  border 0
  padding 15px 0
  margin 0
  
  &.i-size-M
    padding 20px 0
  
  &.i-size-S
    padding 5px 0
  
.b-h1
  font-size 2.6rem
  font-family 'Montserrat', Arial, sans-serif
  font-weight bold
  margin-top 0
  margin-bottom 2.75rem
  line-height 2.7rem
  
  @media( max-height 790px )
    font-size 2.2rem
    line-height 2.3rem
    margin-bottom 2rem
    
  @media ( max-width 992px )
    margin-bottom 1rem
    
  @media ( max-width 600px )
    margin-bottom 2rem
  
.b-h2
  font-size 1.65rem
  font-family 'Montserrat', Arial, sans-serif
  font-weight normal
  margin-top 0
  margin-bottom 1.5rem
  line-height 2.1rem
  
  @media( max-height 790px )
    font-size 1.3rem
    line-height 1.5rem
    margin-bottom 1rem
    
  @media ( max-width 992px )
    margin-bottom 1rem
  
  @media ( max-width 600px )
    margin-bottom 2rem
  
p
  font-size 1rem
  
a
  color #ff5000
  
  &:hover
    opacity .7
    
.b-button
  color #fff
  background-color #ff5000
  background-image none
  font-family 'Montserrat', Arial, sans-serif
  font-size 1rem
  line-height 3.9rem
  height 3.9rem
  padding 0 3rem
  display inline-block
  vertical-align top
  border none
  box-shadow none
  text-align center
  white-space nowrap
  
  &:hover
    opacity .7
    transform( scale(.95))
  
  @media ( max-width 600px )
    padding 0 30px
  
  a&
    text-decoration none
  
  &:focus
    outline none
    
@media only screen and (min-width: 993px) {
  .hide-on-large-only {
    display: none !important
  }
}